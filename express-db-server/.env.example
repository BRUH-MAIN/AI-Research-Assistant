# Environment Configuration for Express DB Server
# Copy this to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3001

# Supabase Configuration
SUPABASE_URL=your-supabase-project-url
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Frontend Configuration (for CORS)
FRONTEND_URL=http://localhost:3000
# Multiple allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000

# Security
JWT_SECRET=your-jwt-secret-for-additional-verification

# Database Configuration (if needed for direct connections)
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000